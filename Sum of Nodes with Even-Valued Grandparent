class Solution {
public:
    int sum = 0; //to store the total sum of the Children
    
    void findGrandParents(TreeNode* child, TreeNode* parent, TreeNode* grandParent){
        if(child == NULL){
            return;
        }
        
        //checking for grandParents
        if(grandParent != NULL && grandParent -> val % 2 == 0){
            sum += child -> val;
        }
        
        //calling the function by assigning child to parent and parent to grandparent as we move down
        findGrandParents(child -> left, child, parent);
        findGrandParents(child -> right, child, parent);
        
    }
    
    int sumEvenGrandparent(TreeNode* root) {
        findGrandParents(root, NULL, NULL);
        return sum;
    }
};
