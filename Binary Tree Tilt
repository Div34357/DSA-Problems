class Solution {
public:

    int solve(TreeNode* root, int &tilt)
    {
        if(root == NULL){
            return 0;
        }
        int left_sum = solve(root->left, tilt);
        int right_sum = solve(root->right, tilt);
        
        tilt += abs(right_sum - left_sum);
        
        return left_sum + right_sum + root->val;

    }

    int findTilt(TreeNode* root) {
        int tilt = 0;
        solve(root, tilt);
        
        return tilt;
    }
};
