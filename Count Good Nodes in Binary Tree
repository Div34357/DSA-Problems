class Solution {
public:
    void countNodes(TreeNode* root, int maxi, int &count)
    {
        if(root == NULL){
            return;
        }
        
        if(maxi <= root->val){
            count++;
            maxi = root->val;
        }
        
        countNodes(root->left, maxi, count);
        countNodes(root->right, maxi, count);
        
        
    }
    
    int goodNodes(TreeNode* root) {
        
        int maxi = INT_MIN, count = 0;
        countNodes(root, maxi, count);
        
        return count;
    }
};
